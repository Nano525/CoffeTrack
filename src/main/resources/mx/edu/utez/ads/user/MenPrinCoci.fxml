<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="mx.edu.utez.ads.controllers.user.MenPrinCociController"
            prefWidth="800" prefHeight="500">

    <!-- ENCABEZADO -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20"
              style="-fx-background-color: #4b2c0a; -fx-padding: 10 20;">
            <ImageView fitHeight="60" fitWidth="60">
                <Image url="@../assets/LogoBlanco.png"/> <!-- Cambia por tu logo -->
            </ImageView>

            <Label text="COFFEE TRACK"
                   style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- CONTENIDO CENTRAL -->
    <center>
        <VBox alignment="CENTER" spacing="25"
              style="-fx-background-color: #d9d9d9; -fx-padding: 40; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #999;"
              BorderPane.alignment="CENTER">

            <Label text="Menú principal"
                   style="-fx-font-size: 28px; -fx-font-family: 'Georgia'; -fx-font-weight: bold;"/>

            <VBox spacing="15" alignment="CENTER">
                <Button text="Pedidos Actuales"
                        fx:id="btnPedidosActuales"
                        style="-fx-pref-width: 220; -fx-pref-height: 40; -fx-font-size: 14px; -fx-background-radius: 5; -fx-background-color: white; -fx-border-color: #ccc;"/>
                <Button text="Pedidos Listos"
                        fx:id="btnPedidosListos"
                        style="-fx-pref-width: 220; -fx-pref-height: 40; -fx-font-size: 14px; -fx-background-radius: 5; -fx-background-color: white; -fx-border-color: #ccc;"/>
                <Button text="Pedidos Cancelados"
                        fx:id="btnPedidosCancelados"
                        style="-fx-pref-width: 220; -fx-pref-height: 40; -fx-font-size: 14px; -fx-background-radius: 5; -fx-background-color: white; -fx-border-color: #ccc;"/>
            </VBox>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Label text="☕" style="-fx-font-size: 18px;"/>
                <Button text="Salir"
                        fx:id="btnSalir"
                        style="-fx-background-color: #4b2c0a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"
                        prefWidth="80"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
