<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: #E6F3F0;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mx.edu.utez.ads.controllers.user.PlaActController">

    <!-- ENCABEZADO SUPERIOR -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #3A1D08; -fx-padding: 10 20;">
            <ImageView fitHeight="50" fitWidth="322.0">
                <Image url="@../assets/LogoBlanco.png" /> <!-- Logo sin texto -->
            </ImageView>

            <Pane HBox.hgrow="ALWAYS" />

            <TextField promptText="Buscar" style="-fx-background-radius: 8; -fx-pref-width: 250;" />
        </HBox>
    </top>

    <!-- CUERPO PRINCIPAL -->
    <center>
        <HBox spacing="30" style="-fx-padding: 30;">
            <!-- SECCIÓN IZQUIERDA (LISTA DE PEDIDOS) -->
            <VBox spacing="15" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #3D5C4A;" text="Pedidos" />

                <TableView fx:id="tblPedidos" prefWidth="500">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="60" text="ID" />
                        <TableColumn fx:id="colCliente" prefWidth="120" text="Cliente" />
                        <TableColumn fx:id="colProductos" prefWidth="150" text="Productos" />
                        <TableColumn fx:id="colEstado" prefWidth="100" text="Estado" />
                        <TableColumn fx:id="colTotal" prefWidth="70" text="Total" />
                    </columns>
                </TableView>

                <Button prefWidth="150" style="-fx-background-color: #556B2F;                                -fx-text-fill: white;                                -fx-font-weight: bold;                                -fx-background-radius: 5;" text="Nuevo Pedido" />
            </VBox>

            <!-- SECCIÓN DERECHA (DETALLES DEL PEDIDO) -->
            <VBox alignment="TOP_CENTER" prefWidth="300" spacing="15" style="-fx-background-color: #F0FFF0;                          -fx-padding: 25;                          -fx-background-radius: 10;                          -fx-border-color: #3D5C4A;                          -fx-border-width: 1;                          -fx-border-radius: 10;">

                <Label fx:id="lblPedido" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #3D5C4A;" text="Pedido 0016" />
                <Label fx:id="lblCliente" style="-fx-font-size: 16px; -fx-text-fill: #3D5C4A;" text="Jose Morales" />
                <Label fx:id="lblEstado" style="-fx-text-fill: #3D5C4A; -fx-font-weight: bold;" text="En preparación" />

                <Separator prefWidth="200" />

                <GridPane hgap="20" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints halignment="LEFT" prefWidth="150" />
                        <ColumnConstraints halignment="RIGHT" prefWidth="80" />
                    </columnConstraints>

                    <Label text="Expresso" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label text="55.00" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Concha" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <Label text="10.00" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Separator GridPane.columnSpan="2" GridPane.rowIndex="2" />

                    <Label style="-fx-font-weight: bold;" text="Total:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <Label style="-fx-font-weight: bold;" text="65.00" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>

                <HBox alignment="CENTER" spacing="15">
                    <Button prefWidth="80" style="-fx-background-color: #556B2F;                                    -fx-text-fill: white;                                    -fx-background-radius: 5;" text="Listo" />
                    <Button prefWidth="80" style="-fx-background-color: #4b2c0a;                                    -fx-text-fill: white;                                    -fx-background-radius: 5;" text="Cancelar" />
                </HBox>
            </VBox>
        </HBox>
    </center>

    <!-- PIE DE PÁGINA -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #E6F3F0; -fx-padding: 5 20;">
            <Label style="-fx-text-fill: #3D5C4A; -fx-font-size: 12px;" text="Cuatro pedidos activos: Última actualización a las 11:20 a.m" />
        </HBox>
    </bottom>
</BorderPane>
