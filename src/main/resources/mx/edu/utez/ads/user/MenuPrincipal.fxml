<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500" prefWidth="800" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mx.edu.utez.ads.controllers.user.MenuPrincipalController">

    <!-- ENCABEZADO -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #3A1D08; -fx-padding: 10 20;">
           <children>
               <ImageView fitHeight="60" fitWidth="400.0">
                  <image>
                      <Image url="@../assets/LogoBlanco.png" />
                  </image> <!-- Logo sin texto -->
               </ImageView>
           </children>
        </HBox>
    </top>

    <!-- CONTENIDO CENTRAL -->
    <center>
        <VBox alignment="CENTER" spacing="25" style="-fx-background-color: #E6F3F0; -fx-padding: 40; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #999;" BorderPane.alignment="CENTER">
           <children>
   
               <Label style="-fx-font-size: 28px;                           -fx-font-family: 'Georgia';                           -fx-font-weight: bold;" text="Menú principal" />
   
               <VBox alignment="CENTER" spacing="15">
                  <children>
                      <Button fx:id="btnPedidosActuales" onAction="#onPedidosActuales" style="-fx-pref-width: 220;                                -fx-pref-height: 40;                                -fx-font-size: 14px;                                -fx-background-radius: 5;                                -fx-background-color: white;                                -fx-border-color: #ccc;" text="Pedidos Actuales" />
      
                      <Button fx:id="btnPedidosListos" onAction="#onPedidosListos" style="-fx-pref-width: 220;                                -fx-pref-height: 40;                                -fx-font-size: 14px;                                -fx-background-radius: 5;                                -fx-background-color: white;                                -fx-border-color: #ccc;" text="Pedidos Listos" />
      
                      <Button fx:id="btnPedidosCancelados" onAction="#onPedidosCancelados" style="-fx-pref-width: 220;                                -fx-pref-height: 40;                                -fx-font-size: 14px;                                -fx-background-radius: 5;                                -fx-background-color: white;                                -fx-border-color: #ccc;" text="Pedidos Cancelados" />
                  </children>
               </VBox>
   
               <HBox alignment="CENTER_RIGHT" spacing="10">
                  <children>
                      <Label style="-fx-font-size: 18px;" text="☕" />
                      <Button fx:id="onSalir" onAction="#onSalir" prefWidth="80" style="-fx-background-color: #4b2c0a;                                -fx-text-fill: white;                                -fx-font-weight: bold;                                -fx-background-radius: 5;" text="Salir" />
                  </children>
               </HBox>
           </children>
        </VBox>
    </center>

</BorderPane>
